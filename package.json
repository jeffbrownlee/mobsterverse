{
  "name": "mobsterverse",
  "version": "1.0.0",
  "description": "Mobsterverse game monorepo",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev:api": "cd api && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:api": "cd api && npm run build",
    "build:web": "cd web && npm run build",
    "build": "npm run build:api && npm run build:web",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffbrownlee/mobsterverse.git"
  },
  "keywords": ["mobster", "game", "monorepo"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jeffbrownlee/mobsterverse/issues"
  },
  "homepage": "https://github.com/jeffbrownlee/mobsterverse#readme",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
